{
    "name": "tua-storage",
    "version": "1.4.1",
    "description": "A common storage for web(localStorage), for RN(AsyncStorage), for mini-program(wx) or just memory cache(Node.js)",
    "main": "dist/umd.js",
    "module": "dist/es.js",
    "jsnext:main": "dist/es.js",
    "files": [
        "dist/es.js",
        "dist/umd.js"
    ],
    "scripts": {
        "cov": "open coverage/lcov-report/index.html",
        "tdd": "cross-env NODE_ENV=test jest --watch",
        "test": "cross-env NODE_ENV=test jest && codecov",
        "lint": "eslint --fix src/",
        "prebuild": "rimraf dist/* & npm run test",
        "build": "cross-env NODE_ENV=prod rollup -c",
        "pub": "npm run build && npm publish"
    },
    "husky": {
        "hooks": {
            "pre-push": "lint-staged",
            "pre-commit": "lint-staged",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "lint-staged": {
        "src/**/*.js": [
            "eslint --fix",
            "git add"
        ]
    },
    "jest": {
        "bail": true,
        "testURL": "http://localhost",
        "clearMocks": true,
        "transform": {
            "^.+\\.js$": "babel-jest"
        },
        "collectCoverage": true,
        "collectCoverageFrom": [
            "src/**"
        ],
        "setupFiles": [
            "jest-localstorage-mock"
        ]
    },
    "eslintIgnore": [
        "package.json"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/tuateam/tua-storage.git"
    },
    "keywords": [
        "tua-storage",
        "storage",
        "wx",
        "miniprogram",
        "wxmp",
        "weapp"
    ],
    "author": "StEve Young",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/tuateam/tua-storage/issues"
    },
    "homepage": "https://github.com/tuateam/tua-storage#readme",
    "devDependencies": {
        "@commitlint/cli": "^7.2.0",
        "@commitlint/config-conventional": "^7.1.2",
        "babel-core": "^6.26.3",
        "babel-eslint": "^10.0.1",
        "babel-jest": "^23.6.0",
        "babel-plugin-external-helpers": "^6.22.0",
        "babel-plugin-transform-decorators-legacy": "^1.3.5",
        "babel-plugin-transform-object-rest-spread": "^6.26.0",
        "babel-preset-env": "^1.7.0",
        "codecov": "^3.1.0",
        "cross-env": "^5.2.0",
        "eslint": "^5.6.1",
        "eslint-config-standard": "^12.0.0",
        "eslint-plugin-import": "^2.14.0",
        "eslint-plugin-node": "^7.0.1",
        "eslint-plugin-promise": "^4.0.1",
        "eslint-plugin-standard": "^4.0.0",
        "husky": "^1.1.1",
        "jest": "^23.6.0",
        "jest-localstorage-mock": "^2.2.0",
        "lint-staged": "^7.3.0",
        "mock-async-storage": "^2.0.3",
        "rimraf": "^2.6.2",
        "rollup": "^0.66.5",
        "rollup-plugin-babel": "^3.0.3",
        "rollup-plugin-eslint": "^5.0.0",
        "rollup-plugin-json": "^3.1.0"
    }
}
